<% if @unavailable_date.errors.messages.any? %>

  <% @unavailable_date.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<h1>Cadastrar Período Indisponínel</h1>

<%= form_for [@property, @unavailable_date] do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Nome do período' %>
    <%= f.text_field :name, class:'form-control col-sm-12 col-md-6' %>
  </div>
  <div class="form-group">
    <%= f.label :start_date, 'Data Inicial' %>
    <%= f.text_field :start_date, class:'form-control col-sm-12 col-md-6' %>
  </div>
  <div class="form-group">
    <%= f.label :end_date, 'Data Final' %>
    <%= f.text_field :end_date, class:'form-control col-sm-12 col-md-6' %>
  </div>

  <%= f.submit 'Enviar', class:'btn btn-primary' %>
<% end %>
