<h1>Cadastrar Temporada</h1>

<% if @season_rate.errors.any? %>
  <ul>
    <% @season_rate.errors.messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="row">
  <div class="col-md-7">
    <%= form_for [@property, @season_rate] do |f| %>
      <div class="form-group">
        <%= f.label :name, 'Nome'  %>
        <%= f.text_field :name , placeholder: 'Nome da temporada', class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= f.label :start_date, 'Data Inicial' %>
        <%= f.text_field :start_date , placeholder: '31/12/2018', class: 'form-control'%>
      </div >
      <%= f.label :end_date, 'Data Final'   %>
      <%= f.text_field :end_date , placeholder: '31/01/2019', class: 'form-control'%>
      <div class='form-group'>
      <%= f.label :daily_rate, 'Valor da DiÃ¡ria' %>
      <%= f.text_field :daily_rate , placeholder: 'R$3.000,00', class: 'form-control'%>
      </div>
      <%= f.submit 'Enviar' %>

    <% end %>
  </div>
</div>
