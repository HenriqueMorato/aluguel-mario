<%= flash[:error] %>
<%= link_to 'Cadastrar Imóvel', new_property_path %>

<div>
  <%= form_tag(search_by_type_properties_path, method: "get") do %>
    <%= label_tag(:name, 'Buscar por tipo do imóvel') %>
    <%= text_field_tag(:name) %>
    <%= submit_tag("Buscar por Tipo") %>
  <% end %>

  <%= form_tag(search_by_location_properties_path, method: "get") do %>
    <%= label_tag(:location, 'Digite aqui uma localização para buscar') %>
    <%= text_field_tag(:location) %>
    <%= submit_tag("Buscar por localização") %>
  <% end %>
</div>

<div class="row">
  <% @properties.each do |property| %>
    <div class="col-4">
      <h2><%= link_to property.title, property %></h2>
      <dl>
        <dt>Tipo da propriedade</dt>
        <dd><%= property.property_type.name %></dd>

        <dt>Localização:</dt>
        <dd><%= property.location %></dd>

        <dt>Diaria:</dt>
        <dd><%= number_to_currency(
            property.daily_rate , unit: "R$ ", separator: ",", delimiter: "")%>
          </dd>

        <dt>Periodo minimo:</dt>
        <dd><%= property.minimum_rent_days %></dd>

        <dt>Descrição:</dt>
        <dd><%= property.description %></dd>


      </dl>

    </div>
  <% end %>
</div>
