<p><%= @property.title %></p>
<p><%= @property.property_type.name %></p>
<p><%= @property.location  %></p>
<p><%= @property.area %></p>
<p><%= @property.description %></p>
<p><%= number_to_currency(
    @property.daily_rate , unit: "R$ ", separator: ",", delimiter: "")%></p>
<p><%= @property.rooms %></p>
<p><%= @property.minimum_rent_days %></p>
<p><%= @property.maximum_rent_days %></p>
<p><%= @property.photo %></p>
<p><%= @property.maximum_occupancy %></p>
<p><%= @property.usage_rules %></p>

<% @property.proposals.each do |proposal| %>
  <% if proposal.status == 'waiting' %>
  <div>
    <%= proposal.status %>
    <%= proposal.user_name %>
    <%= proposal.email %>
    <%= link_to "Aceitar proposta #{proposal.id}", accept_property_proposal_path(@property, proposal), method: :post%>
  </div>
  <% end %>
<% end %>

<%= link_to 'Enviar Proposta', new_property_proposal_path(@property) %>
