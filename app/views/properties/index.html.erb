<% if owner_signed_in? %>
  <p>Bem-vindo, <%= current_owner.first_name %></p>
<% end %>

<h2>Meus Imóveis</h2>
<div class="row">
  <% if @properties.empty? %>
    <div class="alert alert-danger" role="alert">
      Nenhum imóvel cadastrado
    </div>
  <% else %>
    <% @properties.each do |property| %>
    <div class="col-4">
      <%= render partial: '/shared/property_thumbnail', locals: {property: property}%>
    </div>
    <% end %>
  <% end %>
</div>
